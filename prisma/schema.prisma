// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String     @id @unique @default(cuid())
  name     String
  phone    BigInt[]   @unique
  email    String     @unique
  joined   DateTime
  Person   Person[]
  Relation Relation[]
}

model Person {
  id          String     @id @unique @default(cuid())
  name        String
  phone       BigInt[]   @unique
  email       String[]   @unique
  description String?
  createdBy   User?      @relation(fields: [userId], references: [id])
  userId      String?
  relationsD Relation[] @relation("RelationsD") // relations direct
  relationsI Relation[] @relation("RelationsI") // relations indirect
}

model Relation {
  id        String  @id @unique @default(cuid())
  name      String
  person1   Person? @relation(name: "RelationsD", fields: [personId1], references: [id])
  person2   Person? @relation(name:"RelationsI", fields: [personId2], references: [id])
  createdBy User    @relation(fields: [userId], references: [id])
  personId1 String?
  personId2 String?
  userId    String
}